<div>
  <h1>Photo Details</h1>

  <dl>
    <dt>Image</dt>
    <dd><%= image_tag @the_photo.image.url, alt: "Photo", width: 400 if @the_photo.image.present? %></dd>

    <dt>Caption</dt>
    <dd><%= @the_photo.caption %></dd>

    <dt>Owner</dt>
    <dd><%= @the_photo.owner.username %></dd>

    <dt>Likes Count</dt>
    <dd><%= @the_photo.likes_count %></dd>

    <dt>Comments Count</dt>
    <dd><%= @the_photo.comments_count %></dd>

    <dt>Posted</dt>
    <dd><%= time_ago_in_words(@the_photo.created_at) %> ago</dd>

  <% if user_signed_in? %>
    <dt>Add a fan</dt>
   <dd><% if current_user.likes.exists?(photo_id: @the_photo.id) %>
      <p>You already liked this photo.</p>
    <% else %>
      <%= button_to "Like", insert_like_path, params: { photo_id: @the_photo.id }, method: :post %>
    <% end %>
  <% end %><dd>
</div>

<div>
  <dt>Edit photo</dt>
    <dd><%= form_with(model: @the_photo, url: photo_path(@the_photo), method: :patch, local: true) do |form| %>
      <%= form.label :image, "Image" %>
      <%= form.file_field :image %>
      <%= form.label :caption, "Caption" %>
      <%= form.text_area :caption %>
      <%= form.submit "Update Photo" %>
  <% end %></dd>
</div>

<div>
<dt> Delete photo</dt>
  <dd><%= link_to "Delete this photo", photo_path(@the_photo), method: :delete, data: { confirm: "Are you sure you want to delete this photo?" } %></dd>
</div>

</dl>

<div>
<h2>Comments</h2>

  <table>
    <thead>
      <tr>
        <th>Commenter</th>
        <th>Comment</th>
        <th>Posted</th>
      </tr>
    </thead>
    <tbody>
      <% @the_photo.comments.each do |comment| %>
        <tr>
          <td><%= comment.author.username %></td>
          <td><%= comment.body %></td>
          <td><%= time_ago_in_words(comment.created_at) %> ago</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if user_signed_in? %>
    <h3>Add a new comment</h3>
    <%= form_with(model: Comment.new, url: insert_comment_path, local: true) do |form| %>
        <%= form.hidden_field :photo_id, value: @the_photo.id %>
        <%= form.label :body, "Comment" %>
        <%= form.text_area :body %>
        <%= form.submit "Add Comment" %>
    <% end %>
  <% end %>
</div>
