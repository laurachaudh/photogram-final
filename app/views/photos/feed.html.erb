<h1>Your Feed</h1>

<% if @feed_photos.present? %>
  <table border="1">
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th>Owner</th>
      <th>Posted</th>
      <th>Likes</th>
    </tr>

    <% @feed_photos.each do |photo| %>
      <tr>
        <td>
          <%= image_tag(photo.image.url, alt: "Photo", width: 300) if photo.image.present? %>
        </td>
        <td><%= photo.caption %></td>
        <td><%= photo.owner.username if photo.owner %></td>
        <td><%= time_ago_in_words(photo.created_at) %> ago</td>
        <td><%= photo.likes_count %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No photos to display in your feed.</p>
<% end %>
