<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign-up-form" }) do |f| %>
  <div class="form-row">
    <label for="user_email">Email</label>
    <div>
    <%= f.email_field :email, autocomplete: "email", class: "input-field" %>
    </div>
  </div>

  <div class="form-row">
    <label for="user_password">Password (6 characters minimum) </label>
    <div>
    <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    </div>
  </div>

  <div class="form-row">
    <label for="user_password_confirmation">Password Confirmation</label>
    <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>
  </div>

  <div class="form-row">
    <label for="user_username">Username</label>
    <div>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input-field" %>
    </div>
  </div>

  <div class="form-row">
    <label for="user_private">Private</label>
    <div>
    <%= f.check_box :private, class: "checkbox-field" %>
    </div>
  </div>

  <div class="form-row">
    <%= f.submit "Sign up", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
